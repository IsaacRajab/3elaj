<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductPage"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/pImgSingl"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:id="@+id/pNameSingl"
                android:fontFamily="@font/montserrat_extrabold"
                android:textSize="28sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/productname"
                android:paddingHorizontal="10dp"
                android:textColor="#272727"
                />

            <TextView
                android:id="@+id/pPriceSingl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingHorizontal="10dp"
                android:text="@string/price"
                android:fontFamily="@font/montserrat"
                android:textSize="22sp"
                android:textColor="#272727"

                />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:paddingHorizontal="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="18sp"
                android:textColor="#272727"

                />

            <TextView
                android:id="@+id/pDetailsSingl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:paddingHorizontal="10dp"
                android:text="@string/descriptiontext"
                android:textSize="16sp"
                android:textColor="#272727"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quantity"
                android:paddingHorizontal="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="18sp"
                android:textColor="#272727"
                android:layout_marginTop="15dp"
                />


            <TextView
                android:textColor="#272727"
                android:id="@+id/quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quantitynum"
                android:paddingHorizontal="10dp"
                android:fontFamily="@font/montserrat"
                android:textSize="16sp"
                />

            <Button
                android:layout_marginTop="25dp"
                android:id="@+id/addToCartSingle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to cart"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold"

                android:background="@drawable/addtocart"

                />
        </LinearLayout>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>