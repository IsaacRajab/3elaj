<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"

        >

        <ImageView
            android:id="@+id/drugImgCard"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                >
            <TextView
                android:id="@+id/drugNameCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/productnamecard"
                android:textSize="19sp"
                android:paddingLeft="8dp"
                android:textStyle="bold"
                android:textColor="#1B1B1B"
                />

            <TextView
                android:id="@+id/drugDescriptionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Short Discription"
                android:layout_gravity="center"
                android:textSize="19sp"
                android:paddingLeft="8dp"
                android:textColor="#1B1B1B"
                />
            </LinearLayout>

            <TextView
                android:id="@+id/drugPriceCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/productpricecard"
                android:textColor="#C80000"
                android:textSize="20sp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="15dp"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/Increase"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="#404040"
                app:backgroundTint="#DAFFF9"
                android:background="@drawable/radis"
                android:text="+"

                />
            <TextView
                android:id="@+id/drugQuantityCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#3A3A3A"
                android:textSize="18sp"

                />
            <Button
                android:id="@+id/decrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="#686868"
                app:backgroundTint="#DAFFF9"
                android:background="@drawable/radis"
                android:text="+"

                />

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>
